<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"

    android:layout_width="300dp"
    android:paddingHorizontal="15dp"
    android:layout_marginHorizontal="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="30dp"
    android:background="@drawable/sahapedrawable"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tvPreImpClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/negrocirculo"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#DA322B"
        android:text="* No tiene internet" />
    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Ingrese el preimpreso del acta" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <EditText

        android:id="@+id/etPreImpreso"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:inputType="number"
        android:hint="llene el preimpreso"
        android:background="@drawable/sahapedrawable"
        android:layout_height="wrap_content" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/boPreImpAceptar"
            android:layout_width="wrap_content"
            android:background="@drawable/borderojo"

            android:padding="0dp"
            android:text="ACEPTAR"
            android:layout_height="wrap_content"
            android:gravity="center"/>

    </LinearLayout>



</LinearLayout>

